#include <stdio.h>
#include <iostream>

using namespace std ;
double cuadrado ( double * ) ;

int main ( )
{
double num = 0 , R ;
cout << " entrada de un numero :";
cin >> num ;
R = cuadrado ( & num ) ;
cout << " cuadrado de un numero = " << num <<"*" << num << " = " << R ;
}
// regresar el cuadrado de un nÃºmero
double cuadrado ( double * n )
{
double resultado ;
resultado = ( * n ) * ( * n ) ;
return resultado ;
}
                                      